{
	"include": [ //File Inclusion
		"src/**/*",
	  ],

	"extends": "./tsconfig.base.json", // reference to the base configuration used, which should be pretty standard across repos
	"references": [
//		{"path": "../some-ts-repo"} // reference other TS projects to be imported, TSC recompiles changes
	],
	"compilerOptions": {
		"paths": {
		},

		"baseUrl": "./src",

		"forceConsistentCasingInFileNames": true,
		"composite": false, // enforces certain constraints which make it possible for build tools. Set rootdir to directory containing the tsconfig.json file.
		"outDir": "./out", // If specified, .js (as well as .d.ts, .js.map, etc.) files will be emitted into this directory.

		"declaration": true, // Generate d.ts files for every TypeScript or JavaScript file inside your project
		"declarationDir": "./types", // root directory for where declaration files are emitted.

		"noEmit": false, // Do not emit compiler output files like JavaScript source code, source-maps or declarations.
		"emitDeclarationOnly": false, // Only output d.ts files and not JavaScript files.
	}
}
